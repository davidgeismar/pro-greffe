<%= provide(:title, "Les articles et conseils de Greffe sans Frais") %>
<%= provide(:description, "Tous les articles et les conseils pour choisir une Greffe sans frais") %>
<%= provide(:keywords, "informations, horaires, changer de Greffe, frais bancaires, frais des Greffes") %>


<div class="background-grey pb-4">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="page-header text-center">Cat√©gories</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Description</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
            <tr>
              <td><%= link_to category.name, category %></td>
              <td><%= category.description %></td>
              <td><%= link_to 'Voir', category %></td>
              <td><%= link_to 'Modifier', edit_category_path(category) %></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <% if administrator_signed_in? %>
        <%= link_to 'Nouvelle Categorie', new_category_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
