<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate tags, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>
		</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Research name</th>
      <th>Ordre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.research_name %></td>
        <td><%= tag.popularity_order %></td>
        <td><%= link_to 'Voir', administration_tag_path(tag) %></td>
        <td><%= link_to 'Modifier', edit_administration_tag_path(tag) %></td>
        <td><%= link_to 'Supprimer', administration_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate tags, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>
		</div>
</div>
