<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>
		</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nom de la catégorie</th>
			<th>Type de catégorie</th>
      <th>Visible</th>
      <th>Admin check</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, administration_category_path(category) %></td>
        <td><%= category.type %></td>
        <td><%= category.visible %></td>
        <td><%= category.admin_check %></td>
        <td><%= link_to 'Voir', administration_category_path(category) %></td>
        <td><%= link_to 'Modifier', edit_administration_category_path(category) %></td>
        <td><%= link_to 'Supprimer', administration_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate categories, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>
		</div>
</div>
