
<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>
		</div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Date</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= link_to article.name, administration_article_path(article) %></td>
        <td><%= l article.date.to_datetime %></td>
        <td><%= boolean_display article.visible %></td>
        <td><%= link_to 'Voir', administration_article_path(article) %></td>
        <td><%= link_to 'Modifier', edit_administration_article_path(article) %></td>
        <td><%= link_to 'Supprimer', administration_article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<div class="row">
		<div class="text-center pagination-hd">
			<%= will_paginate articles, renderer: WillPaginate::ActionView::BootstrapLinkRenderer  %>
		</div>
</div>
